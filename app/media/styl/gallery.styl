.baol-gallery-container
	width 100%

.baol-masonry
	padding 1%
	
.baol-item-grid
	width 32.65%
	padding 1%
	cursor url('../img/plus.png'), default
	&:hover .baol-gallery-descritption
		background rgba(255,255,255, .8)
		opacity 1
	
.baol-item-grid img 
	width 100%
		
figure.effect-chico p 
	font-size 15px
	font-style normal
	letter-spacing 2px
	color #000
	line-height 20px i
	font-family RobotoLight
	line-height 30px
	padding 20px 0

figure.effect-chico h3
	font-size 20px
	font-style normal
	letter-spacing 3px
	color #000
	text-transform uppercase 
	font-family HelveticaRegular
	line-height 30px
	position relative 
	padding 0 10px 10px
	&:before
		content ""
		width 100%
		position absolute
		height 2px 
		background #000
		bottom 0
		left 0
		
	
figure.effect-chico figcaption
	padding 3em
	position absolute
	width 100%
	height 100%
	top 0 
	text-align center
	left 0
	background rgba(255,255,255, 0)
	transition .3s
	display flex
	align-items center
	justify-content center
	flex-wrap wrap
	flex-direction column


figure.effect-chico figcaption::before
	position absolute
	top 50px
	right 50px
	bottom 50px
	left 50px
	border 2px solid #000
	content ''
	-webkit-transform scale(1.1)
	transform scale(1.1)


figure.effect-chico figcaption::before,
figure.effect-chico p,
figure.effect-chico h3
	opacity 0
	-webkit-transition opacity 0.35s, -webkit-transform 0.35s
	transition opacity 0.35s, transform 0.35s


figure.effect-chico h3
	max-width 70%
	-webkit-transform scale(1.5)
	transform scale(1.5)

figure.effect-chico p
	margin 0 auto
	width 70%
	-webkit-transform scale(1.5)
	transform scale(1.5)


figure.effect-chico:hover figcaption::before,
figure.effect-chico:hover p,
figure.effect-chico:hover h3
	opacity 1
	-webkit-transform scale(1)
	transform scale(1)


figure.effect-chico:hover figcaption
	background rgba(255,255,255 .7)

@media (min-width: 992px) and (max-width: 1199px)
	.baol-item-grid
		width 49%
		padding 1%
		cursor url('../img/plus.png'), default
		&:hover .baol-gallery-descritption
			background rgba(255,255,255, .8)
			opacity 1

@media (min-width: 768px) and (max-width: 991px)
	.baol-item-grid
		width 49%
		padding 1%
		cursor url('../img/plus.png'), default
		&:hover .baol-gallery-descritption
			background rgba(255,255,255, .8)
			opacity 1

@media (max-width: 767px)			
	.baol-item-grid
		width 99%
		padding 1% 2% 1% 1%
		cursor url('../img/plus.png'), default
		&:hover .baol-gallery-descritption
			background rgba(255,255,255, .8)
			opacity 1